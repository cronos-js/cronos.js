    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.11",
    "node-fetch": "^3.3.2",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "esbuild": "0.19.5",
    "sharp": "^0.32.6",
    "turbo": "^1.10.16"
  }
