{
  "name": "create-cronos",
  "version": "0.1.8",
  "description": "Next Generation Fullstack Tooling",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cronos-js/cronos.js"
  },
  "homepage": "cronosjs.dev/",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node build/app.js",
